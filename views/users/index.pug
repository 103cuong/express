extends ../layout/common
block content
	h3(style='color:tomato') Users
	a(href='/users/create').btn.btn-success.mb-2 New User
	form.form-inline(action='/users/search', method='GET')
		input.form-control(type='text', name='q', value=q)
		button.btn.btn-danger.ml-2 Search
	table.table.my-2
		thead
			tr
				th #
				th Name
				th Actions
		tbody
			each user, index in users
				tr
					td #{index + 1}
					td #{user.name}
					td 
						a.btn.btn-info(href='/users/' + user.id) Detail
	a(href='/').btn.btn-warning Back Home