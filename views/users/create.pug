extends ../layout/common
block content
	.col-md-5
		if errors
				each error in errors
					.alert.alert-danger= error
		form(action='/users/create', method='POST')
			label(for='name') Name
			input.form-control(type='text', name='name', value=values ? values.name : '')#name
			label(for='email') Email
			input.form-control(type='text', name='email', value=values ? values.email : '')#email
			button.btn.btn-primary.my-2 Create